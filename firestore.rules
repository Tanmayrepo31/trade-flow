rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default to denying all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Users can read and update their own user document, but not delete it.
    // New users can create their own document.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
    }

    // Authenticated users can read the list of suppliers and individual profiles.
    // Writing should be handled by a backend process or admin SDK for security.
    match /suppliers/{supplierId} {
        allow read: if request.auth != null;
    }
    
    // Authenticated users can read all reviews.
    // Authenticated users can create new reviews.
    match /reviews/{reviewId} {
      allow read, create: if request.auth != null;
    }

    // Rules for the 'bids' collection
    match /bids/{bidId} {
      // Any authenticated user can create a bid (vendors).
      allow create: if request.auth != null;
      // Any authenticated user can read bids (for suppliers to view).
      allow read: if request.auth != null;
      // Allow the user who created the bid to update or delete it (optional, good practice).
      allow update, delete: if request.auth.uid == resource.data.vendorId;
    }
  }
}
