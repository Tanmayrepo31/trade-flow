
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to suppliers and reviews for demonstration.
    // In a production app, you would restrict this further.
    match /suppliers/{supplierId} {
      allow read: if true;
      allow write: if request.auth != null; // Allow logged-in users to write (for seeding)
    }

    match /reviews/{reviewId} {
      // Allow anyone to read reviews
      allow read: if true;
      // Allow any authenticated user to create a review
      allow create: if request.auth != null;
       // Allow a user to update or delete their own review
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Users can only read and update their own user document.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Deny creating or deleting user documents directly from the client
      allow create, delete: if false;
    }
  }
}
